{
  "name": "styled-foundations",
  "version": "1.0.0",
  "description": "A foundation of primitive building blocks for rapid component design and development",
  "keywords": [
    "react",
    "styled-components",
    "emotion",
    "styled-foundations"
  ],
  "license": "MIT",
  "types": "index.d.ts",
  "main": "index.js",
  "author": "Jordan Phillips",
  "repository": "https://github.com/PHILLIPS71/styled-foundations",
  "bugs": "https://github.com/PHILLIPS71/styled-foundations/issues",
  "scripts": {
    "lint": "eslint --fix --ext .ts ./src",
    "format": "pretty-quick --staged",
    "check-types": "tsc --pretty",
    "validate": "npm-run-all --parallel check-types format lint",
    "build:src": "esbuild src/index.ts --bundle --minify --sourcemap --outfile=dist/index.js",
    "build:types": "tsc",
    "build": "npm-run-all --parallel build:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "esbuild": "^0.13.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.+(js|ts)": [
      "eslint '*/**/*.{js,ts}' --fix"
    ]
  },
  "engines": {
    "node": ">=10.x"
  }
}
